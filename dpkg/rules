#!/usr/bin/make -f
# debian/rules that uses debhelper >= 7.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS


%:
	dh  $@

install_libcthreads:
	# Set up libcthreads package directories and files
	mkdir -p debian/libcthreads/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so.*.*.* debian/libcthreads/usr/lib

install_libcthreads_dev:
	# Set up libcthreads-dev package directories and files
	mkdir -p debian/libcthreads-dev/usr/include
	mkdir -p debian/libcthreads-dev/usr/include/libcthreads
	mkdir -p debian/libcthreads-dev/usr/lib
	mkdir -p debian/libcthreads-dev/usr/lib/pkgconfig
	mkdir -p debian/libcthreads-dev/usr/share/man/man3
	install -p -m755 debian/tmp/usr/include/*.h debian/libcthreads-dev/usr/include
	install -p -m755 debian/tmp/usr/include/libcthreads/*.h debian/libcthreads-dev/usr/include/libcthreads
	install -p -m755 debian/tmp/usr/lib/*.la debian/libcthreads-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.a debian/libcthreads-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so debian/libcthreads-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/pkgconfig/* debian/libcthreads-dev/usr/lib/pkgconfig
	install -p -m755 debian/tmp/usr/share/man/man3/* debian/libcthreads-dev/usr/share/man/man3

override_dh_auto_test:

override_dh_installinit: install_libcthreads install_libcthreads_dev

override_dh_installmenu:

override_dh_installmime:

override_dh_installmodules:

override_dh_installlogcheck:

override_dh_installlogrotate:

override_dh_installpam:

override_dh_installppp:

override_dh_installudev:

override_dh_installwm:

override_dh_installxfonts:

override_dh_gconf:

override_dh_icons:

override_dh_perl:

override_dh_shlibdeps:
	dh_shlibdeps -Llibcthreads -l${PWD}/debian/tmp/usr/lib

override_dh_makeshlibs:
	dh_makeshlibs -Xlibcthreads-dev

